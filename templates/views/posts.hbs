<!DOCTYPE html>
<html lang="en">

{{>head}}

<body>
    {{>navbar}}

    <!-- DASHBOARD -->
    <header class="bg-primary text-white py-2">
        <div class="container">
            <h1><i class="fas fa-pencil-alt"></i> Posts <h1></h1>
        </div>
    </header>

    <!-- SEARCH -->
    <section id="search" class="py-4 mb-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-12 ml-auto">
                    <form id="search-post-form" class="user-form form-inline float-sm-right" action="/user/post/search">
                        <div class="form-group">
                            <input type="text" name="qs" id="qs" class="form-control mr-2" placeholder="Search Posts by title..." data-parsley-required="true">
                        </div>
                        <div class="btn-submit">
                            <input type="submit" id="btn-search-post" class="btn btn-primary btn-search-post" value="Search" />
                        </div>
                    </form>
                </div>
            </div>
        </div>        
    </section>

    <!-- POSTS -->
    <section id="posts">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Latest Posts</h4>
                        </div>
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Date</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each posts}}
                                    <tr>
                                        <td>{{loopCounter @index}}</td>
                                        <td>{{title}}</td>
                                        <td>{{category}}</td>
                                        <td>{{dateFormat createdAt "MMM D YYYY HH:mm"}}</td>
                                        <td>
                                            <a href="/user/post/details?_id={{_id}}" class="btn btn-secondary">
                                                <i class="fas fa-angle-double-right"></i> Details
                                            </a>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        {{#if (gt posts.length 0)}}
                            <div class="container">
                                <ul class="pagination">
                                    <li class="page-item {{#if (lteq prevPageNum 1)}} disabled {{/if}}" id="previous-page-item">
                                        <a class="page-link" href="/user/posts?pn={{prevPageNum}}&skip=1">Previous</a>
                                    </li>
                                    {{#each pages}}
                                    <li class="page-item {{#if active}} active {{/if}}">
                                        <a class="page-link" href="/user/posts?pn={{pageNum}}&skip={{skip}}">{{pageNum}}</a>
                                    </li>
                                    {{/each}}
                                    <li class="page-item {{#if (gt nextPageNum pages.length)}} disabled {{/if}}" id="next-page-item">
                                        <a class="page-link" href="/user/posts?pn={{nextPageNum}}&skip=1">Next</a>
                                    </li>
                                </ul>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {{>footer}}

    {{>scripts}}
</body>
</html>