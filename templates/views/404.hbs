<!DOCTYPE html>
<html lang="en">

{{>head}}

<body class="d-flex flex-column">
    <div class="main-container">
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-0">
            <div class="container">
                <a class="navbar-brand" href="/">Blogen</a>
            </div>
        </nav>

        <!-- DASHBOARD -->
        <header class="bg-warning text-white py-2">
            <div class="container">
                <h1>{{message}}</h1>
            </div>
        </header>

        <section id="page-not-found">
            <div class="container not-found-error-page-container text-warning text-center">
                <div class="row">
                    <div class="col-md-12">
                        <i class="fas fa-exclamation-triangle fa-5x py-2"></i>
                        <p class="display-1 font-weight-bold py-2">404</p>
                        <p class="display-3 text-nowrap">{{message}}</p>
                    </div>
                </div>
            </div>
        </section>

        {{>footer}}
    </div>

    {{>scripts}}

</body>
</html>