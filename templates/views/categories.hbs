<!DOCTYPE html>
<html lang="en">

{{>head}}

<body>
    
    {{>navbar}}

    <!-- DASHBOARD -->
    <header class="bg-success text-white py-2">
        <div class="container">
            <h1><i class="fas fa-folder"></i> Categories <h1></h1>
        </div>
    </header>

    <!-- SEARCh -->
    <section id="search" class="py-4 mb-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6 ml-auto">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search Categories...">
                        <div class="input-group-append">
                          <button class="btn btn-success">Search</button>
                        </div>
                      </div>
                </div>
            </div>
        </div>        
    </section>

    <!-- POSTS -->
    <section id="posts">
        <div class="container">
            <div class="row">

                {{>messages}}

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Latest Categories</h4>
                        </div>
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Date</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        <div class="container pagination-container"
                            data-total-elems="{{totalCategories}}"
                            data-target-url="/user/categories/getall"
                            {{#if isSearchPage}}
                                data-search-page="true"
                                data-target-search-url="/user/categories/search"
                            {{/if}}
                        >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {{>footer}}

    {{>scripts}}

</body>
</html>